<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Your Post!</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title"/>
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script src="../public/js/newPost.js"></script>